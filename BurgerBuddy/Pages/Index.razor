@page "/"

<PageTitle>Index</PageTitle>

<h1>Burger Buddy Orders</h1>

<div class="flex space-x-3 w-screen justify-between p-3">
    <section>
        <h2>Orders Accepted</h2>
        @foreach (var order in _ordersAccepted)
        {
            <div>@order.OrderId</div> 
        }
    </section>
    
    <section>
        <h2>Orders being prepared</h2>
        @foreach (var order in _ordersPreparing)
        {
            <div>@order.OrderId</div> 
        }
    </section>

    <section>
        <h2>Orders ready for collection</h2>
        @foreach (var order in _ordersReady)
        {
            <div>@order.OrderId</div> 
        }

    </section>

    <section>
        <h2>Orders collected</h2>
        @foreach (var order in _ordersCompleted)
        {
            <div>@order.OrderId</div> 
        }
    </section>
</div>
